<div class="row">
  <div class="large-12 medium-12 small-12 columns"> 
    <div class="headerbar large-12 medium-12 small-12 columns">
      <h2>Log in</h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-12 medium-12 small-12 columns"> 
    <div class="large-6 medium-6 small-12 columns">
      <% if current_user.nil? %>
        <%= form_for(User.new, method: :post, url: sessions_path) do |f| %>
          <label>Email <%= f.text_field :email, placeholder: 'Email address' %></label>
          <label>Password <%= f.password_field :password, placeholder: 'Password' %></label>
          <%= button_tag 'Log in', class: 'button', type: 'submit' %>
        <% end %>
      <% else %>
        <p>You are logged in.</p>
      <% end %>
    </div>
  </div>
</div>
