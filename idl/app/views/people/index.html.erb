<div class="row">
  <div class="large-12 medium-12 small-12 columns"> 
    <div class="headerbar large-12 medium-12 small-12 columns">
      <h2>People</h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-12 medium-12 small-12 columns"> 
  <% if !current_user.nil? %>
    <div class="large-12 medium-12 small-12 columns"> 
      <%= link_to "Add new person", new_person_path %>
    </div>
  <% end %>
   <ul class="gridblock_ul medium-block-grid-3 large-block-grid-4 small-block-grid-1">
      <% @people.each do |p| %>
        <li class = "gridblock">
          <h3><b><%= link_to p.name, p %></b></h3>
          <p><b><%= p.title %></b><br/>
          <%= p.projects %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>