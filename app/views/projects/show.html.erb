<div class='row'>
  <div class="large-12 medium-12 small-12 columns">
    <div class="headerbar large-12 medium-12 small-12 columns">
      <h2>Project</h2>
    </div>

    <div class="large-12 medium-12 small-12 columns">
      <%= link_to 'Back to projects', projects_path %>
      <% if !current_user.nil? %>
       | <%= link_to 'Edit project', edit_project_path %>
       | <%= link_to 'Delete', @project, method: :delete, data: {confirm: "Are you sure you wish to delete?"} %>
      <% end %>
      <h3><%= @projects.title %></h3>
      <p><b>People: </b><%= @projects.people %><br/>
      <b>Description: </b><%= @projects.description %></p>

    </div>
  </div>
</div>