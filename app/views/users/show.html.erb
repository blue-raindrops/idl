<div class="row">
  <div class="large-12 medium-12 small-12 columns"> 
    <div class="headerbar large-12 medium-12 small-12 columns">
      <h2>Profile</h2>
    </div>
    <div class="large-12 medium-12 small-12 columns">
      <% if !current_user.nil? %>
      <%= link_to 'Back to users', users_path %>
      
         | <%= link_to 'Edit', edit_user_path %> 
         | <%= link_to 'Delete', @user, method: :delete, data: {confirm: "Are you sure you wish to delete?"} %>
      
        <h3><%= @user.name %></h3>
        <p><b>Email:</b> <%= @user.email %></p>
      <%else%>
        <p>You must be logged in as the administrator to access this feature.</p>

      <% end %>
    </div>
  </div>
</div>
